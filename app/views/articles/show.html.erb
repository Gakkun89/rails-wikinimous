<div class="container">
  <div class="row align-items-center">
    <div class="col-2"></div>
      <div class="col-8 mt-3">
          <article>
            <h2 class="border-bottom mb-3"><%= @article.title %>
              <%= link_to edit_article_path(@article) do  %>
              <i class="fa fa-pencil h4" aria-hidden="true"></i>
              <% end %>
              <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash-o h4 ml-4" aria-hidden="true"></i>
            </h2>
            <% end %>
            <p>
              <%= @article.content%>
            </p>
          </article>
      </div>
      <div class="col-2"></div>
  </div>
</div>
